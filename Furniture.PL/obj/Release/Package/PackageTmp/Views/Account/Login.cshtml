@model Furniture.PL.Models.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" />
    <title>Аутентификация</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/StyleForRegisterAndLogin.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
</head>
<body>
    <div class="col-sm-offset-4 col-sm-4 background">
        <div class="panel-success">
            <div class="panel-heading text-center">
                <h3>Аутентификация</h3>
            </div>
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="text-center">
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <div class="text-center">
                        @Html.LabelFor(model => model.Email)
                    </div>
                    <div class="text-center">
                        @Html.EditorFor(model => model.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="text-center">
                        @Html.LabelFor(model => model.Password)
                    </div>
                    <div class="text-center">
                        @Html.EditorFor(model => model.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="text-center">
                    <div>@Html.ActionLink("Регистрация", "Register", "Account")</div>
                    <br />
                    <input type="submit" value="Войти" class="btn btn-success" />
                </div>
            }
        </div>
        <br />
    </div>
</body>
</html>


