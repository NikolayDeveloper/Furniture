@if (Request.IsAuthenticated)
{
    string userEmail = User.Identity.Name;
    string userName = null;
    using (Furniture.DAL.FurnitureContext db = new Furniture.DAL.FurnitureContext())
    {
        userName = db.Users.Where(m => m.Email == userEmail).FirstOrDefault().UserName.ToString();
    }
    <ul class="nav navbar-nav navbar-right">
       
        <li>@Html.ActionLink("Приветствую тебя "+ @userName,"","")</li>
        <li>@Html.ActionLink("Выйти", "Logoff", "Account")</li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Регистрация", "Register", "Account")</li>
        <li>@Html.ActionLink("Выполнить вход", "Login", "Account")</li>
    </ul>

}